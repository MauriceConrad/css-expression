{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/cjs",
    "declarationDir": "./lib/cjs/types",
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "tests"
  ]
}